<script defer src="/js/admin/animals.js"></script>

<div class="container">

  <div class="d-flex mt-4">
    <div class="form__output d-flex flex-wrap flex-fill" id="list-animals-div" style="max-width: 1000px;">

      {{#each allAnimals}}
      <div class="card" style="width: 12rem;">
        <img src="{{photo}}" class="card-img-top" style="height: 10rem;" alt="photo{{name}}">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <button data-del="{{id}}" class="btn btn-danger" type="button">Удалить</button>
          <button data-edit="{{id}}" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="btn btn-primary"
            type="button">Редактировать</button>
          <form ref='uploadForm' id='uploadForm-{{id}}' action='/admin/animals/addphoto/{{id}}' method='post'
            encType="multipart/form-data">
            <input type="file" name="sampleFile" />
            <input id="photo-{{id}}" class="uploadPhoto" type="submit" value="Upload!" />
          </form>
        </div>
      </div>
      {{/each}}

    </div>

    <div class="form__create text-center mt-3">
      <form id="animals-form" action="/admin/animals/" class="bg-secondary text-dark p-3">
        <div class="mb-3">
          <label class="form-label">Название</label>
          <input type="text" name="name" class="form-control" minlength="3" autocomplete="off" autofocus>
        </div>
        <div class="mb-3">
          <label class="form-label">Фото</label>
          <input type="text" name="photo" class="form-control" autocomplete="off">
        </div>
        <div class="mb-3">
          <label class="form-label">Описание</label>
          <input type="text" name="description" class="form-control" autocomplete="off">
        </div>
        <div id="error-div"></div>
        <div>
          <button type="submit" class="btn btn-dark">Добавить</button>
      </form>
    </div>
  </div>

</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Редактирование</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form id="edit-form-animals" action="/admin/animals/">
          <div class="mb-3">
            <label class="form-label">Название</label>
            <input type="text" value="{{name}}" name="name" class="form-control" minlength="3" autocomplete="off"
              autofocus>
          </div>
          <div class="mb-3">
            <label class="form-label">Фото</label>
            <input type="text" name="photo" class="form-control" autocomplete="off">
          </div>
          <div class="mb-3">
            <label class="form-label">Описание</label>
            <input type="text" name="description" class="form-control" autocomplete="off">
          </div>
          <div id="error-div"></div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            <button type="submit" class="btn btn-primary">Редактировать</button>
        </form>

      </div>
    </div>
  </div>
</div>
