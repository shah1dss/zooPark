<div class="container">
  <div id="animals" class="d-flex flex-row flex-wrap">
    {{#each animals}}
    <div class="card text-center mt-3" style="width: 18rem; margin-right: 10px;">
      <img class="card-img-top img-thumbnail" style="height: 200px;" src="{{this.photo}}" alt="photo{{this.id}}">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <form id="animal{{this.id}}" action="/animals/{{this.id}}" method="post" style="width: 100%;">
          <!-- Button trigger modal -->
          <button type="submit" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Подробнее
          </button>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">adasdas</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      </div>
      <p id="staticDescription" class="p-2"></p>
    </div>
  </div>
</div>
